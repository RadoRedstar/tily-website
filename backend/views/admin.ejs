<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="/table.css">
    <link rel="icon" type="image/x-icon" href="img/logo-scout.ico">
    <title>Tily Admin</title>
    
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css">
</head>
<body>
    <header></header>

    <section >
        <div class="container">
            <div class="table-wrapper">
                <table id="myTable" class="fl-table">
                    <thead>
                      <tr>
                        <th >Anarana</th>
                        <th >Fanampiny</th>
                        <th >Fokonolona</th>
                        <th >Fivondronana</th>
                        <th >Ambaratonga</th>
                        <th >Contact</th>
                      </tr>
                    </thead>
                    <tbody id="tableBody">
                      <% inscrits.forEach(user => { %>
                          <tr>
                            <td><%= user.anarana %></td>
                            <td><%= user.fanampiny %></td>
                            <td><%= user.fokonolona %></td>
                            <td><%= user.fivondronana %></td>
                            <td><%= user.ambaratonga %></td>
                            <td><%= user.contact %></td>
                          </tr>
                      <% }); %>
                    </tbody>
                  </table>
                  <form action="/WVpr@C2eKL5k/reset" method="post">
                      <button type="submit">Reset</button>
                  </form>
                  
            </div>

            <div id="infoForm" class="table-wrapper">
                <form action="/WVpr@C2eKL5k/update" method="post">
                  <label >FITAOVANA</label>
                  <textarea name="fitaovana" 
                  style="width: 400px; height: 100px;"
                  ><%= infos[0].fitaovana.join('\n') %>
                  </textarea>

                  <label >FOTOANA</label>
                  <textarea name="fotoana" 
                  style="width: 400px; height: 100px;"
                  ><%= infos[0].fotoana.join('\n') %>
                  </textarea>

                  <label >TOERANA</label>
                  <textarea name="toerana" 
                  style="width: 400px; height: 100px;"
                  ><%= infos[0].toerana.join('\n') %>
                  </textarea>

                  <label >SARANDASY</label>
                  <textarea name="sarandasy" 
                  style="width: 400px; height: 100px;"
                  ><%= infos[0].sarandasy.join('\n') %>
                  </textarea>


                  <button type="submit">Enregistrer</button>
                </form>
            </div>
            
        </div>
    </section>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>

    <script>
      $(document).ready(function() {
          $('#myTable').DataTable({
              "paging": true,       
              "searching": true,   
              "ordering": true    
          });
      });
    </script>
</body>
</html>
